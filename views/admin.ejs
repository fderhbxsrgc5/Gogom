<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - STARTCOPE MEGA FM</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="admin-theme">
    <div class="container">
        <h1>Admin Control Panel</h1>
        
        <section class="upload-section">
            <h2>Upload New Music (Max 10 files)</h2>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <input type="file" name="music" accept="audio/*" multiple required>
                <button type="submit" class="btn">Upload Files</button>
            </form>
        </section>

        <section class="manage-section">
            <h2>Current Playlist</h2>
            <ul>
                <% playlist.forEach(track => { %>
                    <li>
                        <%= track %>
                        <form action="/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="filename" value="<%= track %>">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>

        <a href="/" class="back-link">Back to Radio</a>
    </div>
</body>
</html>
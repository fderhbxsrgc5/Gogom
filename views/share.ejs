<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Share Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('navbar') %>
  <div class="container mt-5">
    <h2><i class="fas fa-share"></i> Share Panel</h2>
    <form id="shareForm">
      <div class="mb-3">
        <label>Post Link</label>
        <input type="text" class="form-control" name="link" required>
      </div>
      <div class="mb-3">
        <label>Limit</label>
        <input type="number" class="form-control" name="limit" required>
      </div>
      <button type="submit" class="btn btn-success"><i class="fas fa-play"></i> Start Sharing</button>
      <button type="button" id="stopBtn" class="btn btn-danger"><i class="fas fa-stop"></i> Stop</button>
    </form>
    <div id="logs" class="mt-3"></div>
    <p>Total Shares: <span id="totalShares"><%= user.totalShares %></span></p>
  </div>
  <script>
    document.getElementById('shareForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const response = await fetch('/api/share', { method: 'POST', body: formData });
      const data = await response.json();
      document.getElementById('logs').innerHTML = data.logs.map(log => `<p>${log}</p>`).join('');
      document.getElementById('totalShares').textContent = parseInt(document.getElementById('totalShares').textContent) + data.success_count;
    });
    document.getElementById('stopBtn').addEventListener('click', async () => {
      await fetch('/stop-share', { method: 'POST' });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>